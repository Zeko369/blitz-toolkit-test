{
  "name": "blitz-toolkit",
  "version": "1.0.0",
  "scripts": {
    "clean": "rm -rf ./node_modules .next && yarn",
    "dev": "blitz dev",
    "dev:clean": "rm -rf .next && yarn dev",
    "db:migrate": "blitz prisma migrate dev",
    "db:deploy": "blitz prisma migrate deploy",
    "blitz:build": "blitz build",
    "build": "yarn db:deploy && yarn blitz:build",
    "start-prod": "blitz start -p $PORT",
    "start": "blitz start",
    "studio": "blitz prisma studio",
    "lint": "eslint --ignore-path .gitignore --ext .js,.ts,.tsx .",
    "test": "jest",
    "test:watch": "jest --watch",
    "prepare": "husky install"
  },
  "prisma": {
    "schema": "db/schema.prisma"
  },
  "prettier": {
    "semi": false,
    "printWidth": 100
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --fix"
    ]
  },
  "dependencies": {
    "@blitzjs/auth": "2.0.0-alpha.63",
    "@blitzjs/next": "2.0.0-alpha.63",
    "@blitzjs/rpc": "2.0.0-alpha.63",
    "@hookform/resolvers": "2.9.5",
    "@prisma/client": "3.9.0",
    "blitz": "2.0.0-alpha.63",
    "eslint-config-prettier": "8.5.0",
    "next": "12.2.3",
    "prisma": "4.0.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-hook-form": "7.33.1",
    "zod": "3.17.3"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "12.0.8",
    "@types/jest": "27.4.1",
    "@types/node": "17.0.16",
    "@types/preview-email": "2.0.1",
    "@types/react": "18.0.1",
    "@typescript-eslint/eslint-plugin": "5.30.6",
    "eslint": "7.32.0",
    "eslint-config-next": "12.2.2",
    "husky": "7.0.4",
    "jest": "27.5.1",
    "lint-staged": "12.1.7",
    "prettier": "^2.5.1",
    "prettier-plugin-prisma": "3.8.0",
    "pretty-quick": "3.1.3",
    "preview-email": "3.0.5",
    "typescript": "^4.5.3"
  },
  "private": true
}
